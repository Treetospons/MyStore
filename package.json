{
  "name": "MyStore",
  "versionCode": "10001001",
  "version": "1.0.1",
  "private": true,
  "scripts": {
    "android": "ENVFILE=dev ./envscript.sh && react-native run-android --mode=devDebug --appIdSuffix=dev",
    "android:stg": "ENVFILE=stg ./envscript.sh && react-native run-android --mode=stgDebug --appIdSuffix=stg",
    "android:prd": "ENVFILE=prd ./envscript.sh && react-native run-android --mode=prdDebug",
    "build:android": "ENVFILE=dev ./envscript.sh && react-native build-android --mode=devRelease",
    "build:android-stg": "ENVFILE=stg ./envscript.sh && react-native build-android --mode=stgRelease",
    "build:android-prd": "ENVFILE=prd ./envscript.sh && react-native build-android --mode=prdRelease",
    "ios": "ENVFILE=dev ./envscript.sh && react-native run-ios --scheme 'MyStore(dev)'",
    "ios:stg": "ENVFILE=stg ./envscript.sh && react-native run-ios --scheme 'MyStore(stg)'",
    "ios:prd": "ENVFILE=prd ./envscript.sh && react-native run-ios --scheme 'MyStore'",
    "bundle:ios": "react-native bundle --entry-file=index.js --assets-dest=./ios --bundle-output=./ios/main.jsbundle --dev=false --platform=ios",
    "lint": "eslint .",
    "start": "react-native start --reset-cache",
    "clean-android": "cd android && rm -rf app/.cxx && ./gradlew clean && ./gradlew --stop && cd ..",
    "clean-ios": "cd ios && rm -rf Pods && rm -rf Podfile.lock && pod install && cd ..",
    "clean": "rm -rf node_modules && rm -rf yarn.lock && yarn install && yarn clean-android && yarn clean-ios",
    "test": "jest"
  },
  "dependencies": {
    "@react-navigation/elements": "^2.4.2",
    "@react-navigation/native": "^7.1.9",
    "@react-navigation/native-stack": "^7.3.13",
    "@reduxjs/toolkit": "^2.8.2",
    "@types/lodash": "^4.17.17",
    "axios": "^1.9.0",
    "lodash": "^4.17.21",
    "react": "19.0.0",
    "react-native": "0.79.2",
    "react-native-config": "^1.5.5",
    "react-native-fast-image": "^8.6.3",
    "react-native-mmkv": "^3.2.0",
    "react-native-safe-area-context": "^5.4.1",
    "react-native-screens": "^4.10.0",
    "react-redux": "^9.2.0",
    "redux-persist": "^6.0.0",
    "redux-saga": "^1.3.0"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@babel/preset-env": "^7.25.3",
    "@babel/runtime": "^7.25.0",
    "@react-native-community/cli": "18.0.0",
    "@react-native-community/cli-platform-android": "18.0.0",
    "@react-native-community/cli-platform-ios": "18.0.0",
    "@react-native/babel-preset": "0.79.2",
    "@react-native/eslint-config": "0.79.2",
    "@react-native/metro-config": "0.79.2",
    "@react-native/typescript-config": "^0.79.2",
    "@types/jest": "^29.5.14",
    "@types/react": "^19.1.5",
    "@types/react-test-renderer": "^19.1.0",
    "babel-plugin-module-resolver": "^5.0.2",
    "eslint": "^8.19.0",
    "jest": "^29.6.3",
    "prettier": "2.8.8",
    "react-test-renderer": "19.0.0",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=18"
  }
}
